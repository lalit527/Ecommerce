doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    title Signup Form

block content
  h1= title
  for x in product
    p #{x.items.productName}
    P #{x.items.model}
    P #{x.items.brand}
    P #{x.items.sellingPrice}
    p
      
      form(method='post', action='http://localhost:3000/main/cart/delete/'+x.id)
          input(type='submit', name='', value='remove from cart')

      form(method='post', action='http://localhost:3000/main/wishlist/'+x.id)
          input(type='submit', name='', value='buy later')

  form(method='post', action='http://localhost:3000/main/order/add')
          input(type='submit', name='', value='buy now')    
    
        