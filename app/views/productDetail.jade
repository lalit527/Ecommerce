doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    title Signup Form
  body
    section.container
        P #{product.productName}
        P #{product.category}
        P #{product.subCategory}
        P #{product.description}
        P #{product.model}
        P #{product.brand}
        P #{product.sellingPrice}
        P #{product.status}
        p
         a(href='http://localhost:3000/product/products/update/'+product.id) update
         form(method='post', action='http://localhost:3000/product/products/delete/'+product.id)
          input(type='submit', name='', value='delete')
        