doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    title Signup Form
  body
    section.container
      .login
        h1 Create a Product
        form(method='post', action='http://localhost:3000/product/products/update/#{product.id}')
          p
            input(type='text', name='productName', value='#{product.productName}', placeholder='#{product.productName}', required='')
          p
            input(type='text', value='#{product.category}', name='category', placeholder='#{product.category}', required='')
          p
            input(type='text', value='#{product.subCategory}', name='subCategory', placeholder='#{product.subCategory}', required='' readonly)
          p
            input(type='text', value='#{product.description}', name='description', placeholder='#{product.description}', required='' readonly)
          p
            input(type='text', value='#{product.model}', name='model', placeholder='#{product.model}', required='' readonly)
          p
            input(type='text', value='#{product.brand}', name='brand', placeholder='#{product.brand}', required='' readonly)
          p
            input(type='text', value='#{product.sellingPrice}', name='sellingPrice', placeholder='#{product.sellingPrice}', required='')
          p.submit
            input(type='submit', name='', value='update')
